<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/23.0.1"
            fx:controller="com.example.project.EndPageController"
            prefWidth="800.0" prefHeight="600.0"
            stylesheets="@../css/end_page_style.css">

    <children>
        <VBox layoutX="100" layoutY="100" spacing="15" prefWidth="600" prefHeight="400">
            <children>
                <Label text="رده‌بندی بهترین رکوردها"
                       style="-fx-font-size: 24px; -fx-font-weight: bold;" />
                <TableView fx:id="rankingTable" prefHeight="350" prefWidth="600">
                    <columns>
                        <TableColumn fx:id="nameColumn" text="نام" prefWidth="300"/>
                        <TableColumn fx:id="scoreColumn" text="امتیاز" prefWidth="300"/>
                    </columns>
                </TableView>
            </children>
        </VBox>
    </children>
</AnchorPane>